<div class="container" style= "margin-bottom: 50px;">
  
  <!-- upper section -->
  <div class="row">

    <form class="form form-vertical" action="/podio_contact" method="post" >  
    Hello Constant Contact

      <div class = "col-md-6">
        <label class="control-label" for="textarea">Name</label> 
        <input type="text" class="form-control" name="name"  title="Name" placeholder="Name" required >
      </div> 
      <div class = "col-md-6">
        <label class="control-label" for="textarea">Email</label> 
        <input type="text" class="form-control" name="email"  title="Email" placeholder="Email" required >
      </div>
      <div class = "col-md-6">
        <label class="control-label" for="textarea">Phone</label> 
        <input type="text" class="form-control" name="phone"  title="Phone" placeholder="Phone" required >
      </div>
      <div class = "col-md-6">
        <label class="control-label" for="textarea">Message</label> 
        <input type="text" class="form-control" name="message"  title="Message" placeholder="Message" required >
      </div>

      <hr>
      <div class="form-actions">
        <button type="submit" value="Submit" name="commit" class="btn btn-success">Submit</button>
        <button type="reset" class="btn" onclick="history.go(-1);">Cancel</button>
      </div>

  </div>
</div>
